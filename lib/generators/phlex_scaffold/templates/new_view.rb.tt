# frozen_string_literal: true

class Views::<%= controller_class_name %>::NewView < Views::Base
  def initialize(<%= singular_table_name %>:)
    @<%= singular_table_name %> = <%= singular_table_name %>
  end

  def view_template(&)
    div(class: "scaffold-show-container scaffold <%= singular_table_name %>-new", id: dom_id(@<%= singular_table_name %>, :new)) do
      h1(class: "scaffold-title scaffold-show-actions-spacing") { "New <%= human_name.downcase %>" }
      
      render Components::<%= class_name %>Form.new(<%= singular_table_name %>: @<%= singular_table_name %>)
      
      div(class: "scaffold-show-actions-spacing") do
        link_to "Back to <%= human_name.pluralize.downcase %>", 
                <%= plural_route_name %>_path,
                class: "scaffold-button--secondary"
      end
    end
  end
end